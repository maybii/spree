<div class="" style="padding: 30px 15px;">
  <div class="">
    <div class="">
      <p class="title"><%= t(:new_shipping_address, scope: :address_book) %></p>
    </div>
    <div class="body">
      <% @address = Spree::Address.default %>
      <%= render 'spree/shared/error_messages', target: @address %>
      <%= form_for @address, html: { id: 'checkout_form_address' } do |f| %>
        <fieldset>
          <div class="inner">
            <%= render 'spree/addresses/form',
              address_name: 'address',
              address_form: f,
                address_type: 'shipping',
                address: @address
            %>
          </div>
          <div class="col-sm-offset-1 user-address-form__btn"><%= f.submit t(:save, scope: :address_book), class: 'btn btn-red btn-110' %></div>

        </fieldset>
      <% end %>
    </div>
  </div>
</div>
