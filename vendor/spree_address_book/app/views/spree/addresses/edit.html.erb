<div id="address-edit-form" class="col-md-12 panel panel-default">
  <div class="col-md-6 col-md-offset-3">
    <div class="title">更新地址</div>
    <%= render 'spree/shared/error_messages', target: @address %>
    <%= form_for @address, html: { id: 'checkout_form_address' } do |f| %>
      <fieldset>
        <div class="inner">
          <%= render 'spree/addresses/form',
            address_name: 'address',
            address_form: f,
            address_type: 'shipping',
            address: @address
          %>
        </div>
        <%= f.submit Spree.t(:update), class: 'btn btn-red btn-110' %>
      </fieldset>
    <% end %>
  </div>
</div>

