<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div id="forgot-password">
  <div class="panel panel-default">
    <div class="panel-heading">
      <!-- <h3 class="panel-title"><%= Spree.t(:forgot_password) %></h3> -->
    </div>
    <div class="panel-body">

      <%= form_for Spree::User.new, class: 'form-horizontal', :as => :spree_user, :url => spree.reset_password_path do |f| %>
        <div class="form-group password-tip-text">
          <label class="col-sm-4 control-label text-right">密码找回方式：</label>
          <label class="col-sm-6">电子邮箱</label>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label text-right label-for-input">邮箱地址：</label>
          <div class="col-sm-6">
            <%= f.email_field :email, :class => "form-control", placeholder: Spree.t(:email) %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <%= f.submit Spree.t(:reset_password), :class => 'btn btn-red btn-180' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
