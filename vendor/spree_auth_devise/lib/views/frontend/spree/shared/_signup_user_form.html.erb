<% error_fields = @user.errors.messages.keys if @user && @user.errors%>
<fieldset id="password-credentials">
  <div class="form-group">
      <%= f.email_field :email, id: 'account__email', :class => 'form-control', :placeholder => Spree.t(:email) %>
      <% if @user and @user.errors and error_fields.index(:email) %>
        <div class="form-error"><%= @user.errors.full_messages[error_fields.index(:email)] %></div>
      <% end %>
  </div>
  <div class="form-group">
      <%= f.password_field :password, id: 'account__password', :class => 'form-control', :placeholder => Spree.t(:password) %>
      <% if @user and @user.errors and error_fields.index(:password) %>
        <div class="form-error"><%= @user.errors.full_messages[error_fields.index(:password)] %></div>
      <% end %>
  </div>
  <div class="form-group">
      <%= f.password_field :password_confirmation, id: 'account__password_confirmation', :class => 'form-control', :placeholder => Spree.t(:confirm_password) %>
      <% if @user and @user.errors and error_fields.index(:password_confirmation) %>
        <div class="form-error"><%= @user.errors.full_messages[error_fields.index(:password_confirmation)] %></div>
      <% end %>
  </div>
</fieldset>
<div data-hook="signup_below_password_fields"></div>
