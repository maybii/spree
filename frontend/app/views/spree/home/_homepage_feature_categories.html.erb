<div id="home-content-feature-categories">
<% if products.any? %>
  <div class="home-content-feature-category" class="" data-hook>
    <div class="category-head clearfix">
      <div class="category-title pull-left">
        <span class="title-index">1F</span>
        <span class="title-text">进口饼干</span>
        <span class="divider">|</span>
        <span class="title-text">糕点</span>
      </div>
      <div class="category-recommend pull-right">
        <ul class='nav navbar nav-pills'>
          <li><a href="/">曲奇</a></li>
          <li><a href="/">威化饼</a></li>
          <li><a href="/">苏打饼干</a></li>
          <li><a href="/">夹心饼干</a></li>
          <li><a href="/">蛋卷</a></li>
          <li><a href="/">曲奇礼盒</a></li>
        </ul>
      </div>
    </div>
    <div class="category-wrapper">
      <div class="category-list-item first"></div>
      <% products.each do |product| %>
        <% url = spree.product_url(product, taxon_id: @taxon.try(:id)) %>
        <div id="product_<%= product.id %>" class="category-list-item" data-hook="category_list_item" itemscope itemtype="https://schema.org/Product">
          <div class="panel panel-default">
            <% cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : cache_key_for_product(product)) do %>
              <div class="panel-body text-center product-body">
                <%= link_to url, itemprop: "url" do %>
                  <%= small_image(product, itemprop: "image", class: 'product-image') %><br/>
                  <%= content_tag(:div, truncate(product.name, length: 50), class: 'info', itemprop: "name", title: product.name, class: "product-title text-left") %>
                <% end %>
                <br/>
              </div>
              <div class="panel-footer">
                <div itemprop="offers" itemscope itemtype="https://schema.org/Offer">
                  <div class="product-price selling" itemprop="price">
                    <span>批发：</span><span class="price"><%= display_price(product) %></span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
      <% reset_cycle("classes") %>
    </div>
    <div class="category-ranking">
        <h4>热销排行榜</h4>
        <div class="ranking-items">
