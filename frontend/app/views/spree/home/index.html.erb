<div id='home-feature-tabs' class="content-section">
  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#new-in-store" aria-controls="new" role="tab" data-toggle="tab">新品上市</a></li>
    <li role="presentation"><a href="#on-sale" aria-controls="on-sale" role="tab" data-toggle="tab">促销专区</a></li>
    <li role="presentation"><a href="#hot" aria-controls="hot" role="tab" data-toggle="tab">热卖商品</a></li>
  </ul>
  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="new-in-store">
      <div data-hook="homepage_products">
        <% cache(cache_key_for_products) do %>
          <%= render :partial => 'spree/home/homepage_products', :locals => { :products => @products } %>
        <% end %>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane fade" id="on-sale">
      <div data-hook="homepage_products">
        <% cache(cache_key_for_products) do %>
          <%= render :partial => 'spree/home/homepage_products', :locals => { :products => @random_products } %>
        <% end %>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane fade" id="hot">
      <div data-hook="homepage_products">
        <% cache(cache_key_for_products) do %>
          <%= render :partial => 'spree/home/homepage_products', :locals => { :products => @best_products } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- feature-categories -->
<div id="home-feature-categories">
  <div data-hook="homepage_features">
    <%= render :partial => 'spree/home/homepage_feature_categories' %>
  </div>
</div>

