<% @taxonomies = Spree::Taxonomy.includes(root: :children) %>

<!------------------ Top Header --------------------->

<div id="spree-main-header">
  <div class="container">
    <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
  </div>
</div>

<!------------------ Logo Header -------------------->

<div id="spree-header">
  <header id="header" data-hook>
    <div class="container">
      <div class="row">
        <figure id="logo" class="col-md-2 col-sm-2" data-hook>
          <%= logo %>
        </figure>
        <%= render :partial => 'spree/shared/nav_bar' %>
      </div>
    </div>
  </header>
</div>

<div id="spree-third-header">
  <div class="container">

    <!------------ Left ------------>

    <div class="dropdown open pull-left">
      <!-- data-toggle="dropdown"  -->
      <button class="btn btn-default dropdown-toggle open" type="button" id="all-category-menu" aria-haspopup="true" aria-expanded="true">
        全部商品分类
      </button>
      <ul class="dropdown-menu left-menu-dropdown">
        <% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
        <% @taxonomies.each do |taxonomy| %>
          <% cache [I18n.locale, taxonomy, max_level, @taxon] do %>
            <li class="dropdown-submenu dropdown-menu-left">
              <a class="left-menu-title" href="#"> <%=taxonomy.name %> </a>
              <%= taxons_tree_in_left_menu(taxonomy.root, @taxon, max_level) %>
              <ul class="dropdown-menu right-menu-dropdown">
                <%= taxons_tree_in_right_menu(taxonomy.root, @taxon, 2) %>
              </ul>
            </li>
          <% end  %>
        <% end  %>
      </ul>
    </div>

    <div class="slider-content">

      <!------------ Title ------------>

      <div class="title-above-slider">
        <%= link_to "首页", "/", class: "item" %>
        <%= link_to "新品上市", "/new_products", class: "item" %>
        <%= link_to "促销专区", "/on_sale", class: "item section" %>
        <%= link_to "代理加盟", "/agency", class: "item" %>
        <%= link_to "企业采购", "/caigou", class: "item section" %>
        <%= link_to "资讯公告", "/news", class: "item" %>
        <%= link_to "买家须知", "/privacy", class: "item" %>
        <%= link_to "关于真谛", "/about", class: "item" %>
      </div>
      <div>
        <!------------ Right ------------>

        <div class="profile-in-header pull-right">
          <div class="hi-section">
            <div class="hi"> Hi! 你好</div>
            <div class="welcome"> 欢迎来到zhendi.com</div>
          </div>
          <div class="login-btns">
            <div class="login-btn-item col-xs-6">
              <i class="icon-lock"></i>
              <%=link_to "登录", '/login', class: "" %>
            </div>
            <div class="login-btn-item col-xs-6">
              <i class="icon-edit"></i>
              <%=link_to "注册", '/sign_up', class: ""  %>
            </div>
          </div>
          <div class="notice">
            <div>
              <!-- Nav tabs -->
              <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#notice" aria-controls="home" role="tab" data-toggle="tab">公告</a></li>
                <li role="presentation"><a href="#introduction" aria-controls="profile" role="tab" data-toggle="tab">买家入门</a></li>
              </ul>

              <!-- Tab panes -->
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="notice">
                  <div>  [公告]物流信息通知 </div>
                  <div> [公告]巧克力产品保存须知</div>
                  <div>[公告]五一春节放假通知</div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="introduction">
                  <div>  [公告]物流信息通知 </div>
                  <div> [公告]巧克力产品保存须知</div>
                  <div>[公告]五一春节放假通知</div>
                </div>
              </div>

            </div>
          </div>
          <div class="notice-content"></div>
          <div class="safe-guards">
            <span class='col-xs-4 text-right'> <i class="icon-shield"></i></span>
            <span class='col-xs-4 text-center'> <i class="icon-calendar"></i></span>
            <span class='col-xs-4 text-left'> <i class="icon-heart"></i></span>
          </div>
          <div class="phone-title">客服热线</div>
          <div class="phone-number">
            <div class="number">0479-83317151</div>
            <div class="serve-time">服务时间: 周一到周六 9:00-18:00</div>
          </div>
        </div>

        <!------------ Center ------------>

        <%= render :partial => "spree/shared/home_slider" %>
      </div>
    </div>
  </div>
</div>
