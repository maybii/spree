<% content_for :page_title do %>
  <%= link_to Spree.t(:introductions), spree.admin_introductions_url %> /
  <%= @introduction.title.capitalize %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @introduction } %>

<%= form_for [:admin, @introduction] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
