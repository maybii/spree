<div data-hook="admin_introduction_form_fields" class="row">
  <div class="col-md-8">
    <%= f.field_container :name, class: ["form-group"], 'data-hook' => "introduction_name" do %>
      <%= f.label :title, '标题' %> <span class="required">*</span>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :name, class: ["form-group"] do %>
      <%= f.label :body, '正文' %> <span class="required">*</span>
      <%= f.text_area :body, class: 'form-control', rows: 12 %>
      <%= f.error_message_on :body %>
    <% end %>
  </div>

  <div data-hook="additional_introduction_fields"></div>
</div>
