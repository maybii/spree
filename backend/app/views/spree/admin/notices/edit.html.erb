<% content_for :page_title do %>
  <%= link_to Spree.t(:notices), spree.admin_notices_url %> /
  <%= @notice.title.capitalize %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @notice } %>

<%= form_for [:admin, @notice] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
